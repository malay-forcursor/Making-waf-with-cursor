# AI-Driven WAF Configuration
# Copy this file to .env and customize for your environment

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Network Configuration
NETWORK_INTERFACE=eth0
CAPTURE_FILTER=""
MAX_PACKET_SIZE=65535

# Database Configuration
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://waf_user:waf_pass@localhost:5432/waf_db
ELASTICSEARCH_URL=http://localhost:9200

# AI/ML Configuration
MODEL_PATH=./models
ENABLE_GPU=false
BATCH_SIZE=32
CONFIDENCE_THRESHOLD=0.8

# Security Features
ENABLE_DPI=true
ENABLE_SSL_INSPECTION=true
ENABLE_ANOMALY_DETECTION=true
ANOMALY_THRESHOLD=0.7

# Zero Trust Configuration
ENABLE_ZERO_TRUST=true
JWT_SECRET_KEY=your-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Threat Intelligence
ENABLE_THREAT_INTEL=true
THREAT_INTEL_FEEDS=https://api.threatintel.com/feed,https://feeds.malwaredomains.com/files/justdomains

# Performance Configuration
MAX_CONCURRENT_CONNECTIONS=10000
PACKET_BUFFER_SIZE=1000000
PROCESSING_THREADS=4

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security Policies
DEFAULT_ACTION=ALLOW
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Federated Learning
ENABLE_FEDERATED_LEARNING=false
FEDERATION_SERVER=localhost:8080